class Avion:
    def __init__(self,modelo,asientos):
        self.modelo = modelo
        self.asientos = asientos
        self.vuelo = None
        
    def asignar_vuelo(self,vuelo):
        self.vuelo = vuelo

        #metodos

class Vuelo:   #numero vuelo
    def __init__(self,num_vuelo,origen,destino,fecha_hora,avion):
        self.num_vuelo = num_vuelo
        self.vuelos_disponibles = []
        self.reservaciones = []
        self.origen = origen
        self.destino = destino
        self.fecha_hora = fecha_hora
        self.avion = avion
        self.avion.asignar_vuelo(self)

class Pasajero: #Datos pasajero
    def __init__(self, nombre, num_pasaporte):
        self.nombre = nombre
        self.num_pasaporte = num_pasaporte

aviones = {
    "Airbus": Avion("A320", 190),
    "Boeing": Avion("800", 189),
    "Bombardier": Avion("CRJ700", 78)
}

#ingreso de los datos del vuelo a crear
print("cree su vuelo")
num_vuelo = int(input("ingrese el numero de vuelo: "))
origen = input("ingrese el origen del vuelo: ")
destino = input("ingrese el destino: ")
fecha_hora = input("ingrese la fecha y hora: ")
nombre_avion = input("Ingrese su avion (Airbus, Boeing, Bombardier): ")
avion_seleccionado = aviones.get(nombre_avion)


if avion_seleccionado:
    vuelo1 = Vuelo(num_vuelo, origen, destino, fecha_hora, avion_seleccionado)
    print(avion_seleccionado.vuelo.num_vuelo)
else:
    print("Avi√≥n no reconocido")
